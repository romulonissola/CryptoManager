{
    "editor.wordWrap": "off",
    "files.exclude": {
			"**/node_modules": {},
			"typings": {},
			"**/*.map": {},
			"**/*.js": {
				"when": "$(basename).ts"
			}
	},
	"eslint.enable": false,
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true
	},
	"editor.formatOnSave": true
}
